@inherits ComponentBase

@* TODO: 1. Add DC_result to SubsystemDetailModelSIL *@

<MudCard Elevation="3">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Subsystem info</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <EditForm Model="@Model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            <MudGrid>
                <MudItem xs="12">
                    <MudSelect T="string" Label="Type of function" Strict="true" Variant="Variant.Outlined" Format="F2">
                        <MudSelectItem T="string" Value="@("Vstup")" />
                        <MudSelectItem T="string" Value="@("Logika")" />
                        <MudSelectItem T="string" Value="@("Vystup")" />
                        <MudSelectItem T="string" Value="@("Komunikacia")" />
                    </MudSelect>
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.CatalogNumber" Label="Category number" Variant="Variant.Outlined"></MudTextField>
                </MudItem>
                <MudItem xs="12">
                    <MudSelect T="string" Label="Architecture" Strict="true" Variant="Variant.Outlined" Format="F2">
                        <MudSelectItem T="string" Value="@("A")" />
                        <MudSelectItem T="string" Value="@("1")" />
                        <MudSelectItem T="string" Value="@("2")" />
                        <MudSelectItem T="string" Value="@("3")" />
                    </MudSelect>
                </MudItem>
                <MudItem xs="6">
                    <MudTextField @bind-Value="Model.T1" Label="T1" Variant="Variant.Outlined"></MudTextField>
                </MudItem>
                <MudItem xs="6">
                    <MudTextField @bind-Value="Model.T2" Label="T2" Variant="Variant.Outlined"></MudTextField>
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.Hft" Label="T2" Variant="Variant.Outlined"></MudTextField>
                </MudItem>
                <MudItem xs="12">
                    <MudSelect T="string" Label="CCF" Variant="Variant.Outlined" MultiSelection="true">
                        <MudSelectItem T="string">Option1</MudSelectItem>
                        <MudSelectItem T="string">Option2</MudSelectItem>
                        <MudSelectItem T="string">Option3</MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="12">
                    <hr />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.PfHd_result" Label="PFHd result" Variant="Variant.Outlined"></MudTextField>
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="DC_result.Value" Label="DC result" Variant="Variant.Outlined"></MudTextField>
                </MudItem>
            </MudGrid>
        </EditForm>
    </MudCardContent>
</MudCard>

@code {

    private DCModel DC_result = new DCModel();

    [Parameter]
    public SubsystemDetailModelSIL Model { get; set; }

    private void OnValidSubmit()
    {

    }

}

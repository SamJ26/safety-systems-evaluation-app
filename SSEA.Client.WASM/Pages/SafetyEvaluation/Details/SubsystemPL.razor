@inherits ComponentBase

@* TODO: 1. Add CCFModel to code generated by swagger
         2. Fix naming conventions in swagger generated code *@

<MudCard Elevation="3">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Subsystem </MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <EditForm Model="@Model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            <MudGrid>
                <MudItem xs="12">
                    <MudSelect T="string" Label="Type of function" Strict="true" Variant="Variant.Outlined" Format="F2">
                        <MudSelectItem T="string" Value="@("Vstup")" />
                        <MudSelectItem T="string" Value="@("Logika")" />
                        <MudSelectItem T="string" Value="@("Vystup")" />
                        <MudSelectItem T="string" Value="@("Komunikacia")" />
                    </MudSelect>
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.CatalogNumber" Label="Category number" Variant="Variant.Outlined"></MudTextField>
                </MudItem>
                <MudItem xs="12">
                    <MudSelect T="string" Label="Category" Strict="true" Variant="Variant.Outlined" Format="F2">
                        <MudSelectItem T="string" Value="@("A")" />
                        <MudSelectItem T="string" Value="@("1")" />
                        <MudSelectItem T="string" Value="@("2")" />
                        <MudSelectItem T="string" Value="@("3")" />
                    </MudSelect>
                </MudItem>
                <MudItem xs="12">
                    <MudSelect T="string" Label="CCF" Variant="Variant.Outlined" MultiSelection="true">
                        <MudSelectItem T="string">Option1</MudSelectItem>
                        <MudSelectItem T="string">Option2</MudSelectItem>
                        <MudSelectItem T="string">Option3</MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="12">
                    <hr />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.MttFd_result" Label="MTTFd result" Variant="Variant.Outlined"></MudTextField>
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.DC_result" Label="DC result" Variant="Variant.Outlined"></MudTextField>
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.PL_result" Label="PL result" Variant="Variant.Outlined"></MudTextField>
                </MudItem>
            </MudGrid>
        </EditForm>
    </MudCardContent>
</MudCard>

    @code {

        [Parameter]
        public SubsystemDetailModelPL Model { get; set; }

        private void OnValidSubmit()
        {

        }

    }


<MudDialog Style="width: 400px;">
    <TitleContent>
        <MudText Typo="Typo.h5" Color="Color.Warning">
            <MudIcon Icon="@Icons.Material.Filled.Warning" Class="mr-3 mb-n1" />
            Warning
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.h6">
            @MainText
        </MudText>
        <MudText Typo="Typo.subtitle1">
            @AdditionalText
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton DisableElevation="true" OnClick="Cancel">Cancel</MudButton>
        <MudButton DisableElevation="true" Color="Color.Primary" OnClick="Submit">Continue</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string MainText { get; set; }

    [Parameter]
    public string AdditionalText { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();

}
